<div class="row">
  <div class="columns large-12">
    <% if current_user.username == "taha.jalil" || @city.admin_id == current_user.id %>
      <h1>Add Team Member to <%= @city.name %></h1>
      <%= form_for ([current_user, @city, @user]), :html => {:multipart => true} do |f| %>
        <% if @city.errors.any? %>
          <div class="error_messages">
            <h2>Form is invalid</h2>
            <ul>
              <% for message in @city.errors.full_messages %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <div class="field">
          <%= f.label :name %><br>
          <%= f.text_field :name %>
        </div>

        <div class="field">
          <%= f.label :description %><br>
          <%= f.text_area :description %>
        </div>

        <div class="field">
          <%= f.label :fav_food, "Favorite Food" %><br>
          <%= f.text_area :fav_food %>
        </div>

        <div class="field">
          <%= f.label :avatar %><br>
          <%= f.file_field :avatar %>
        </div>

        <div class="field">
          <%= f.label :type_of_user %><br>
          <p>
            <%= f.radio_button(:type_of_user, "Team Member") %>
            <%= f.label(:type_of_user, "Team Member") %>
          </p>
          <p>
            <%= f.radio_button(:type_of_user, "Judge") %>
            <%= f.label(:type_of_user, "Judge") %>
          </p>
          <p>
            <%= f.radio_button(:type_of_user, "Mentor") %>
            <%= f.label(:type_of_user, "Mentor") %>
          </p>
          <p>
            <%= f.radio_button(:type_of_user, "Sponsor") %>
            <%= f.label(:type_of_user, "Sponsor") %>
          </p>
        </div>

        <div class="field">
          <%= f.label :twitter %><br>
          <%= f.text_field :twitter %>
        </div>

        <div class="field">
          <%= f.label :linkedin %><br>
          <%= f.text_field :linkedin %>
        </div>

        <%= f.hidden_field :city_id, value: @city.id %>

        <div class="action">
          <%= f.submit "Save" %>
        </div>

      <% end %>
    <% else %>
      <h1>Sorry you do not have access to this page</h1>
    <% end %>
  </div>
</div>