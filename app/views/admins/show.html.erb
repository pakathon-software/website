<div class="row">
  <div class="large-12 columns">
    <div class="row">
      <div class="large-6 large-centered columns">
        <h1>Logged in as <%= current_user.username %></h1>
      </div>
    </div>
    <div class="row">
      <div class="large-12 columns">
        <% if current_user.username == "taha.jalil" %>
          <% @cities.each do |city| %>
            <p><%= link_to "Go to #{city.name}", dashboard_admin_city_path(current_user, city) %> | <%= link_to "Edit #{city.name}", edit_admin_city_path(current_user, city) %></p>
          <% end %>
        <% else %>
          <%= link_to "Edit #{@city.name}", edit_admin_city_path(current_user, @city) %>
        <% end %>
      </div>
    </div>
  </div>
</div>
