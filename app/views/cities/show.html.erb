          <h4>EDUCATION</h4>
        </div>
        <div class="stream large-3 large-centered columns">
          <h4>HEALTH</h4>
        </div>
        <div class="stream large-3 large-centered columns">
          <h4>RETAIL</h4>
        </div>
      </div>
      <% if @city.name == "Toronto" %>
        <div class="row">
          <div class="stream large-3 large-centered columns">
            <h4>ENERGY</h4>
          </div>
          <div class="stream large-3 large-centered columns">
            <h4>HUMAN RIGHTS</h4>
          </div>
          <div class="stream large-3 large-centered columns">
            <h4>HOUSING</h4>
          </div>
        </div>
      <% elsif @city.name == "Boston" %>
        <div class="row">
          <div class="stream large-3 large-centered columns">
            <h4>INCLUSIVENESS</h4>
          </div>
          <div class="stream large-3 large-centered columns">
            <h4>BROKEN SYSTEMS</h4>
          </div>
          <div class="stream large-3 large-centered columns">
            <h4>SECURITY</h4>
          </div>
        </div>
