<% if current_user %>
  <div id="topnav-loggedin" class="fixed sticky">
    <ul class="sub-nav small-12 medium-12 large-12 columns">
      <li class="logo" style="margin-top:0.5rem">
        <%= link_to image_tag(Logo.find_by(name:"pakathon globe").image_url(:team), size: "40"),root_path %>
      </li>
      
      <li class="topnav-titles"><%= link_to 'Admin Dashboard', admin_path(current_user) %></li>
      <li class="topnav-titles"><%= link_to 'Logout', admin_session_path("current"), method: :delete %></li>

      <li style="float:right; margin-top: 0.30rem">
        <a href="<%= @city.eventbrite_page %>" target="_blank">
          <div class="registration-button button medium">
            <span>Webinar Registration</span>
          </div>
        </a>
      </li>
    </ul>
  </div>
<% else %>
  <div class="fixed sticky topnav">
    <ul class="sub-nav small-12 medium-12 large-12 columns large-centered medium-centered small-centered">
      <li class="logo" style="margin-top:0.5rem">
       <%= link_to image_tag(Logo.find_by(name:"pakathon globe").image_url(:team), size: "40"),root_path %>
      </li>
      
      <li style="float:right; margin-top: 0.30rem">
        <a href="<%= @city.eventbrite_page %>" target="_blank">
          <div class="registration-button button medium">
            <span>WEBINAR REGISTRATION</span>
          </div>
        </a>
      </li>
    </ul>
  </div>
<% end %>

<% if @city.name == "Toronto" || @city.name == "Boston" || @city.name == "New York" || @city.name == "Silicon Valley" || @city.name == "Washington DC" %>

  <%= render 'headnav' %>

  <div class="website-body">
    <% if @city.name == "Toronto" %>
      <div class="row">
        <div class="columns small-12 medium-12 large-12">
          <div id="<%= @city.name.downcase.split(" ").join %>-background-img">
            <div class="row">
              <div class="hero-text small-12 medium-12 large-12 columns text-center">
                <h1>#PakathonTO | OCTOBER 2<span style="font-size:1.5rem; vertical-align:top;">ND</span> - 4<span style="font-size:1.5rem; vertical-align:top;">TH</span></h1>
                <h3 class="video-action"><%= image_tag(Logo.find_by(name:"play-button-red").image_url(:team), size:"60") %> ENGAGING THE WORLD TO RESHAPE PAKISTAN</h3>
                <h3 class="video-action-on-hover">WATCH THE VIDEO</h3>
              </div>
              <div class="video-action-on-click large-10 columns large-centered">
                <iframe width="1400" height="500" src="https://www.youtube.com/embed/RqfYtAHHFJk?autohide=1&color=white&showinfo=0&rel=0" frameborder="0" allowfullscreen></iframe>
              </div>
            </div>
          </div>
        </div>
      <% else %>
        <div class="row">
          <div class="large-12 columns">
            <div id="<%= @city.name.downcase.split(" ").join %>-background-img">
              <div class="row">
                <div class="hero-text large-8 columns text-center large-centered">
                  <h1>OCTOBER 2<span style="font-size:1.5rem; vertical-align:top;">ND</span> - 4<span style="font-size:1.5rem; vertical-align:top;">TH</span></h1>
                </div>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>

    <div class="row support-section" style="padding: 3rem" id='support'>
      <div class="small-12 medium-6 large-6 columns text-center">
        <div class="row text-center">
          <div class="small-12 medium-12 large-12 columns text-center">
            <h5 style="font-style:italic">A conversation worth having. Let's talk.<br></h5>
          </div>
        </div>
          <div class="row">
            <div id="phone" class="small-12 medium-12 large-12 columns text-center">
              <p><%= @city.email %></p>
            </div>
          </div>
          <div class="row">
            <div class="small-6 medium-6 large-6 columns text-center">
              <a href="<%= @global.facebook %>" target="_blank">
                <div id="facebook">
                  <% if @city.facebook.present? %>
                    <%= link_to image_tag(Logo.find_by(name:"facebook_logo").image_url(:team), size: "60"), @city.facebook, target: "_blank" %>
                  <% else %>
                    <%= link_to image_tag(Logo.find_by(name:"facebook_logo").image_url(:team), size: "60"), @global.facebook, target: "_blank" %>
                  <% end %>
                </div>
              </a>
            </div>

            <div class="small-6 medium-6 large-6 columns text-center end">
              <div id="twitter">
                <% if @city.twitter.present? %>
                  <%= link_to image_tag(Logo.find_by(name:"twitter_logo").image_url(:team), size: "60"), @city.twitter, target: "_blank" %>
                <% else %>
                  <%= link_to image_tag(Logo.find_by(name:"twitter_logo").image_url(:team), size: "60"), @global.twitter, target: "_blank" %>
                <% end %>
              </div>
            </div>
          </div>
        </div>

        <div class="small-12 medium-6 large-6 columns text-center">
        <!-- Begin MailChimp Signup Form -->
          <link href="//cdn-images.mailchimp.com/embedcode/slim-081711.css" rel="stylesheet" type="text/css">
          <div id="mc_embed_signup">
            <form action="//pakathon.us9.list-manage.com/subscribe/post?u=ad8b8f5d43cbae3d83d1dbe5e&amp;id=42c988d66c" method="post" id="mc-embedded-subscribe-form" name="mc-embedded-subscribe-form" class="validate" target="_blank" novalidate>
              <div id="mc_embed_signup_scroll" class="text-center">
                <label for="mce-EMAIL">Subscribe to our mailing list</label>
                <div class="email-field">
                  <input type="email" value="" name="EMAIL" class="email" id="mce-EMAIL" placeholder="email address" required>
                </div>
                <!-- real people should not fill this in and expect good things - do not remove this or risk form bot signups-->
                <div style="position: absolute; left: -5000px;">
                  <input type="text" name="b_ad8b8f5d43cbae3d83d1dbe5e_42c988d66c" tabindex="-1" value="">
                </div>
                <div class="clear">
                  <input type="submit" value="Subscribe" name="subscribe" id="mc-embedded-subscribe" class="button">
                </div>
              </div>
            </form>
          </div>
          <!--End mc_embed_signup-->
        </div>
      </div>
    </div>
  </div>
<% else %>
  <div class="row">
    <div class="large-10 large-centered text-center columns">
      <h2>Oops. Sorry this page does not exist.</br> Click here to return to the main website - <a href="http://www.pakathon.org/">Pakathon</a></h2>
    </div>
  </div>
<% end %>

