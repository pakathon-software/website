<section id="team-hero">
  <div class="v-wrapper">
    <div class="v-inner">
      <div class="row">
        <div class="columns large-10 large-centered medium-10 medium-centered small-12 xsmall-12">
          <div class="hero-text text-center">
            <h2 class="gamma">We are a group of passionate people putting in all the hours we have to make our vision a reality.</h2>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<section id="team-core">
  <div class="row">
    <div class="columns large-12 medium-12 small-12 xsmall-12">
      <h2 class="gamma">TEAM</h2>
    </div>
  </div>
  <div class="row">
    <div class="columns xsmall-12">
      <% @users.each do |user| %>
        <% if user.type_of_user == "Core Team Member" || user.type_of_user == "City Lead" %>
          <div class="admin-user-panel columns large-2 medium-3 small-6 xsmall-12 text-center" style="background-image: url(<%= user.avatar %>)">
            <div class="team-member-info">
              <h4 class="delta"><%= user.name %></h4>
              <h5 class="epsilon"><%= user.description.upcase %></h5>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
</section>

<section id="team-partners">
  <div class="row">
    <div class="columns large-12 medium-12 small-12 xsmall-12">
      <h2 class="gamma">PARTNERS</h2>
    </div>
  </div>
  <div class="row">
    <ul>
      <% @sponsors.each do |sponsor| %>
        <li class="columns large-4 medium-4 small-6 xsmall-12 team-photo text-center">
          <%= image_tag sponsor.avatar_url %>
        </li>
      <% end %>
    </ul>
  </div>
</section>