<section id="team-hero">
  <div class="v-wrapper">
    <div class="v-inner">
      <div class="row">
        <div class="columns large-12 medium-12 small-12 xsmall-12">
          <div class="hero-text text-center">
            <h2 class="gamma">A sentence on why Pakathon exists</h2>
            <p class="punch">This sentence describes the passionate team of organizers, volunteers, partners and sponsors that help make Pakathon happen</p>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<section id="team-core">
  <div class="row">
    <div class="columns large-12 medium-12 small-12 xsmall-12">
      <h2 class="gamma">Core Team</h2>
    </div>
  </div>
  <div class="row">
    <ul class="columns large-block-grid-5 medium-block-grid-4 small-block-grid-3 xsmall-block-grid-4">
      <% @users.each do |user| %>
        <% if user.type_of_user == "Core Team Member" %>
          <li class="team-photo text-center" id="core-team-1">
            <%= image_tag user.avatar %>
            <h2 class="epsilon"><%= user.name %></h2>
            <p class="punch"><%= user.description %></p>
          </li>
        <% end %>
      <% end %>
      <li class="team-photo text-center" id="core-team-2">
      </li>
      <li class="team-photo text-center" id="core-team-3">
      </li>
      <li class="team-photo text-center" id="core-team-4">
      </li>
      <li class="team-photo text-center" id="core-team-5">
      </li>
      <li class="team-photo text-center" id="core-team-6">
      </li>
      <li class="team-photo text-center" id="core-team-7">
      </li>
    </ul>
  </div>
</section>

